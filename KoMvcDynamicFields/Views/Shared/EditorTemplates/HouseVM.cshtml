@model KoMvcDynamicFields.Models.HomeViewModel.HouseVM

<div class="dynamic-item">
    <div class="form-group">
        @Html.LabelFor(model => model.Address)
        @Html.TextBoxFor(model => model.Address, new { data_bind = "value: Address, dynamicName: $parent.Houses().length", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.City)
        @Html.TextBoxFor(model => model.City, new { data_bind = "value: City, dynamicName: $parent.Houses().length", @class = "form-control" })
    </div>
    <div class="delete-group btn-effect-1">
        <span data-bind="click: $parent.removeHouse" class="glyphicon glyphicon-remove-circle btn-delete" title="remove this item"></span>
    </div>
</div>


