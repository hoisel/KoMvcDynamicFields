@model KoMvcRepeatingFieldGroup.Models.HomeViewModel.CursoVM


<!-- salva i id num hidden field* -->
@Html.HiddenFor( curso => curso.Id, new { data_bind = "value: Id, dynamicName: $parent.Cursos().length ", @class = "form-control" } )

<div class="form-group">
    @Html.LabelFor( curso => curso.Nome )
    @Html.TextBoxFor( curso => curso.Nome, new { data_bind = "value: Nome, dynamicName: $parent.Cursos().length ", @class = "form-control" } )
</div>

<div class="form-group">
    @Html.LabelFor( curso => curso.Local )
    @Html.TextBoxFor( curso => curso.Local, new { data_bind = "value: Local, dynamicName: $parent.Cursos().length ", @class = "form-control" } )
</div>

<div class="delete-group">
    <span data-bind="click: $parent.removeCurso" class="glyphicon glyphicon-remove-circle btn-delete" title="remove this item"></span>
</div>

<br />
