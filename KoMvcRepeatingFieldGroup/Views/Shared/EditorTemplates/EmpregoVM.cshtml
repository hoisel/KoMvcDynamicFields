@model KoMvcRepeatingFieldGroup.Models.HomeViewModel.EmpregoVM

<div class="form-group">
    @Html.LabelFor( emprego => emprego.Empresa )
    @Html.TextBoxFor( emprego => emprego.Empresa, new { data_bind = "value: Empresa, dynamicName: $parent.Empregos().length", @class = "form-control" } )
</div>

<div class="form-group">
    @Html.LabelFor( emprego => emprego.Cargo )
    @Html.TextBoxFor( emprego => emprego.Cargo, new { data_bind = "value: Cargo, dynamicName: $parent.Empregos().length", @class = "form-control" } )
</div>
<div class="delete-group">
    <span data-bind="click: $parent.removeEmprego" class="glyphicon glyphicon-remove-circle btn-delete" title="remove this item"></span>
</div>
<br />

